<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="biz.psyphon.beersociety.UserAreaActivity">

    <!--<EditText-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:id="@+id/etEvent1"-->
        <!--android:layout_below="@+id/textView3"-->
        <!--android:layout_alignParentLeft="true"-->
        <!--android:layout_alignParentStart="true"-->
        <!--android:layout_alignRight="@+id/etUsername"-->
        <!--android:layout_alignEnd="@+id/etUsername"/>-->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/tvWelcomeMsg"
        android:layout_centerHorizontal="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:weightSum="1">

        <ListView
            android:id="@+id/custom_list"
            android:layout_width="fill_parent"
            android:layout_height="299dp"
            android:dividerHeight="1dp"
            android:layout_weight="0.20"/>

        <Button
            android:text="Take a Pic of Your Beer!"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bTakePhoto"
            android:layout_weight="0.20"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:text="Welcome,"
        android:id="@+id/textView2"

        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/tvName"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Your Events"
        android:id="@+id/tvWelcomeMsg"
        android:layout_marginTop="0dp"
        android:layout_below="@+id/bLogOut"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingTop="30dp"/>

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvWelcomeMsg"
        android:id="@+id/tvName"
        android:elevation="1dp"
        android:textSize="18sp"
        android:textAppearance="@style/TextAppearance.AppCompat"/>

    <Button
        android:text="All Events"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bAllEvents"
        android:layout_marginRight="15dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/bLogOut"
        android:layout_toStartOf="@+id/bLogOut"
        android:layout_marginEnd="15dp"/>

    <Button
        android:text="Log Out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bLogOut"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="10dp"/>


</RelativeLayout>
